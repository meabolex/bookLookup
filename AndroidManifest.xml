<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.BookSearch"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk android:minSdkVersion="17" />
    <application
        android:icon="@drawable/book_icon"
        android:label="@string/app_short_name"
        android:name="BookSearchApplication"
        android:allowClearUserData="true"
        android:theme="@android:style/Theme.Black">
        <activity
            android:name="BookCriteria"
            android:label="@string/app_short_name">
            <intent-filter>
                ￼￼￼￼
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="BookList"
            android:label="@string/app_name_books">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="com.example.BookSearch.VIEW_LIST" />
            </intent-filter>
        </activity>
        <activity
            android:name="BookDetail"
            android:label="@string/app_name_book">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="com.example.BookSearch.VIEW_DETAIL" />
            </intent-filter>
        </activity>
    </application>

    <!--<uses-permission android:name="android.permission.CALL_PHONE" />-->
    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens
        largeScreens="false"
        xlargeScreens="false"
        anyDensity="false" />
</manifest>
